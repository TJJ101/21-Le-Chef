<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/stepsTextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Step Description"
            android:textColor="#2C2C2C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepTime"></TextView>

        <TextView
            android:id="@+id/stepsDeleteBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:drawableEnd="@drawable/ic_baseline_close_24"
            android:paddingRight="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/stepTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/stepNum" />

        <TextView
            android:id="@+id/stepNum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Step 1"
            android:textColor="#2C2C2C"
            app:layout_constraintEnd_toStartOf="@+id/stepsDeleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stepTime"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="00:15:00"
            android:textColor="#2C2C2C"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/stepsDeleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepNum" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>